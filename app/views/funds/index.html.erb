<div class="container">
  <h1 class="my-5">Current prices for selected funds:</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col" class="bg-dark text-white">#</th>
        <th scope="col" class="bg-dark text-white">Fund Name</th>
        <th scope="col" class="bg-dark text-white">Current Price</th>
      </tr>
    </thead>
    <tbody>
      <% @funds.each_with_index do |fund, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= fund.name %></td>
          <td class="fund-price"><%= fund.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
